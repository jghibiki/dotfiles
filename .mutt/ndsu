## Receive optionse
set imap_user=jordan.goetze@ndsu.edu
set imap_pass= ''
set folder = imaps://jordan.goetze@ndsu.edu@smtp.office365.com:993/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set smtp_url=smtps://jordan.goetze@ndsu.edu@smtp.office365.com:587/
set realname='Jordan Goetze'
set from=jordan.goetze@ndu.edu
set hostname="gmail.com"
set signature=""
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

set imap_check_subscribed

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=jordan.goetze@ndsu.edu@smtp.office365.com:587/ imap_pass='' "
