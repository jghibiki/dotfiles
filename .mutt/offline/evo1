
## Recieve Options
folder-hook evo1 set from="jgoetze@evolution1.com"
set folder="~/Mail/"
set spoolfile="+evo1/INBOX"
set postponed = "+evo1/Drafts"
set record = "+evo1/Sent"


## Send options.
set imap_user=jgoetze@evolution1.com
set imap_pass = `pass mutt/evo1`
set smtp_url=smtp://$imap_user:$imap_pass@smtp.office365.com:587/
set realname='Jordan Goetze'
set from=jgoetze@evolution1.com
set hostname="evolution1.com"
set signature="
Jordan Goetze
BAP Team 
Software Intern"

# Connection options
set ssl_force_tls = yes
unset ssl_starttls



# override update keybind
macro index \cr '<shell-escape>/usr/bin/offlineimap -a evo1<enter><sync-mailbox>'
