## Receive optionse
set imap_user=jgoetze@evolution1.com
set imap_pass = `pass mutt/evo1`
set folder = imaps://jgoetze@evolution1.com@outlook.office365.com:993/
set spoolfile = +INBOX
set postponed = +Drafts
set record = "+Sent Items"

## Send options.
set smtp_pass = $imap_pass
set smtp_url=smtp://$imap_user@smtp.office365.com:587/
set realname='Jordan Goetze'
set from=jgoetze@evolution1.com
set hostname="ndsu.edu"
set signature=""
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

set imap_check_subscribed

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=jgoetze@evolution1.com@smtp.office365.com:587/ imap_pass=`pass mutt/evo1` "
